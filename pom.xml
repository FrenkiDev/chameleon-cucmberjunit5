<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>ru.ibs.planeta</groupId>
    <artifactId>chameleon-cucmberjunit5</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>chameleon-cucmberjunit5</name>
    <packaging>jar</packaging>

    <parent>
        <groupId>ru.ibsqa.chameleon</groupId>
        <artifactId>chameleon-bom</artifactId>
        <version>3.5.0</version>
    </parent>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <repositories>
        <repository>
            <id>chameleon-snapshots</id>
            <name>IBS Chameleon Snapshots Repo</name>
            <url>https://nexus.appline.ru/repository/chameleon</url>
            <layout>default</layout>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <!--dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>ru.ibsqa.chameleon</groupId>
                <artifactId>chameleon-bom</artifactId>
                <version>3.5.0</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement-->

    <dependencies>
        <dependency>
            <groupId>ru.ibsqa.chameleon</groupId>
            <artifactId>chameleon-web-cucumber</artifactId>
        </dependency>
        <dependency>
            <groupId>ru.ibsqa.chameleon</groupId>
            <artifactId>chameleon-log</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>ru.ibsqa.chameleon</groupId>
            <artifactId>chameleon-allure-cucumber</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <encoding>UTF-8</encoding>
                    <source>11</source>
                    <target>11</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.0.0-M5</version>
            </plugin>
        </plugins>
    </build>
</project>
